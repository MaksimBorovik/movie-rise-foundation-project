  .header__top
    .row.align-justify.align-middle
      .header__top-logo.columns.shrink
        a.header__top-logo-link(href="#") MOVIE
          span.header__top-logo-link-light RISE
      .header__top-controls.columns.text-right
        .hide-for-small-only
          a.header__top-controls-search(href="#") 
            i(class="material-icons") search
          a.header__top-controls-signin.active(href="#") Sign In
          a.header__top-controls-signup(href="#") Sign Up
        .header__top-controls-mobile.show-for-small-only.align-middle
          <i class="material-icons" data-toggle="offCanvasTop1">person</i>
