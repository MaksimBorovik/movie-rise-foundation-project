.header__mobile.off-canvas.position-top(id="offCanvasTop1" data-off-canvas data-transition="overlap")
  .header__mobile-menu
    .row
      .header__mobile-menu-sign-in.column
        p Sign In:
        input(type="text" placeholder="Enter your login")
        input(type="text" placeholder="Enter your password")
        a.header__mobile-menu-sign-in-next.active(href="#") Next
    .row
      .header__mobile-menu-sign-up.column
        span Or create your own account&nbsp;
        a.header__mobile-menu-sign-up-create(href="#") for free
    <i class="header__mobile-menu-close material-icons" data-close>close</i>
